<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TravailFinSession.Pages.Employe.ListeEmployePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravailFinSession.Pages.Employe"
    xmlns:classes="using:TravailFinSession.Classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F0F4F8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Height="60">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0D47A1" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="0.5"/>
                    <GradientStop Color="#42A5F5" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="LISTE DES EMPLOYÉS"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="40"
                       Foreground="White"/>
        </Border>

        <GridView x:Name="gvListeEmploye"
                  Grid.Row="1"
                  Padding="40,30"
                  SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="classes:Employe">
                    <Border Background="White"  Margin="15"  Width="520"  Height="240"  Padding="25"  CornerRadius="16">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                          
                            <Border Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.RowSpan="3"
                                    Width="100"
                                    Height="100"
                                    CornerRadius="50"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Top"
                                    BorderBrush="#E3F2FD"
                                    BorderThickness="4"
                                    Background="#FFFFFF">
                                <Image Width="100" Height="100" Stretch="UniformToFill">
                                    <Image.Source>
                                        <Binding Path="Photo" />
                                    </Image.Source>
                                </Image>
                            </Border>

                            <!-- Infos -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="8" VerticalAlignment="Top">
                                <TextBlock Text="{x:Bind NomComplet, Mode=OneWay}"
                                           FontWeight="Bold"
                                           Foreground="#0D47A1"
                                           FontSize="22"
                                           TextWrapping="Wrap"
                                           MaxLines="2"/>
                                <Border Background="#E3F2FD" CornerRadius="6" Padding="10,5" HorizontalAlignment="Left">
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1565C0">
                                        <Run Text="Matricule #"/>
                                        <Run Text="{x:Bind Matricule, Mode=OneWay}"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>

                            <!-- Détails -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="6" VerticalAlignment="Center" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border Width="24" Height="24" CornerRadius="12" Background="#E3F2FD" Padding="4">
                                        <SymbolIcon Symbol="Mail" Foreground="#1976D2" Width="16" Height="16"/>
                                    </Border>
                                    <TextBlock Text="{x:Bind Email, Mode=OneWay}" FontSize="13" Foreground="#546E7A" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <Border Width="24" Height="24" CornerRadius="12" Background="#E3F2FD" Padding="4">
                                        <SymbolIcon Symbol="ContactInfo" Foreground="#1976D2" Width="16" Height="16"/>
                                    </Border>

                                   
                                    <Border Background="#1976D2" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind StatutEmploye, Mode=OneWay}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Row="2" Grid.Column="1"
                                    Background="#1976D2" Foreground="White"
                                    Padding="20,12" HorizontalAlignment="Stretch"
                                    FontSize="15" FontWeight="SemiBold"
                                    Click="Modifier_Employe" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <SymbolIcon Symbol="Edit" Width="18" Height="18"/>
                                    <TextBlock Text="Modifier" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
